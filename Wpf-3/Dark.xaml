<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Black"/>
    </Style>     
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource WindowStyle}">
        <Setter Property="Button.BorderBrush" Value="White"/>
        <Setter Property="Button.Foreground" Value="White"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="TextBox.TextAlignment" Value="Justify"/>
    </Style>
    <Style x:Key="ComboBoxStyle" BasedOn="{StaticResource ButtonStyle}"/>
    <Style x:Key="ToolBarTrayStyle">
        <Setter Property="ToolBarTray.Background" Value="Black"/>
    </Style>

</ResourceDictionary>